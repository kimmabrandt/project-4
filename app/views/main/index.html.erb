
  <div class="container">
    <div class="section">
    	<div class="row">
    		<div class="col s12 center">
    	
    		  <a href="/posts/new"><button class="btn-large waves-effect waves-light amber addgoal">+ ADD GOAL</button></a>
    		</div>
    	</div>
      <div class="row">
        <div class="col s12">
						<% if @current_user %>
							<h4>Welcome <%= @current_user[:name] %>! </h4>
						<% else %>
							<h3>Please Login</h3>
						<% end %>

						<% if @posts %>
							<% @posts.each do |post| %>
								<div class="card-panel card-show white posts">
								<div class="voting">
									
									
								</div>
								<div class="row white">
									<div class="col s5">
										<strong><h4 style="margin-top:0">&nbsp;&nbsp;<i class="material-icons blue-grey-text">mode_edit</i>&nbsp;&nbsp;<%= link_to post.title, post %></h4></strong>
									</div>
									<div class="col s4">
									<h6 style="font-size:18px">Priority: <b>1</b></h6>
									</div>
									<div class="col s3">
									<h6 class="red-text text-darken-1" style="font-size:18px; font-weight:bolder">Deadline: <%= post.due %></h6>
									</div>
								</div>
									<p><%= post.description %></p>

									<em>-<%= post.user.name %></em><br>
									<%= post.created_at.time.to_formatted_s(:long) %> 
								</div>
							<% end %>
							<% else %>
							No Posts yet! <br>
							<%= link_to '+ New Post', '/posts/new', class: 'btn waves-effect waves-light' %>
						<% end %>
					</p>
        </div>
      </div>
    </div>
  </div>


