
  <div class="container">
    <div class="section">
    	<div class="row">
    		<div class="col s12 center">
    		  <%= link_to '+ New Post', '/posts/new', class: 'btn waves-effect waves-light' %>
    		</div>
    	</div>
      <div class="row">
        <div class="col s12">
						<% if @current_user %>
							<h4>Welcome <%= @current_user[:name] %>! </h4>
						<% else %>
							<h3>Please Login</h3>
						<% end %>

						<% if @posts %>
							<% @posts.each do |post| %>
								<div class="card-panel card-show white posts">
								<div class="row white">
									<strong><h4>&nbsp;&nbsp;<i class="material-icons blue-grey-text">mode_edit</i>&nbsp;&nbsp;<%= link_to post.title, post %></h4></strong>
									</div>
									<p><%= post.description %></p>
									<em>-<%= post.user.name %></em><br>
									<%= post.created_at.time.to_formatted_s(:long) %> 
								
								</div>
							<% end %>
							<% else %>
							No Posts yet! <br>
							<%= link_to '+ New Post', '/posts/new', class: 'btn waves-effect waves-light' %>
						<% end %>

					</p>
        </div>
      </div>

    </div>
  </div>


