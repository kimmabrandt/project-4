<%= form_for @post do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div>
		<%= f.label 'Deadline' %>
		<%= f.text_field :due %>
	</div>
	<div>
		<%= f.label :category %>
		<%= f.text_area :category %>
	</div>

	<%= f.submit  'Add Goal!', class: 'btn-large waves-effect waves-light amber lighten-1' %>
<% end %>