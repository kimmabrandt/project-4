<h1>Edit Post</h1>

<%= form_for @post do |t| %>
	<div class="form-group">
		<%= t.label :title %>
		<%= t.text_area :title, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= t.label :description %>
		<%= t.text_area :description, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= t.label :due %>
		<%= t.text_area :due, class: 'form-control' %>
	</div>
	<%= t.submit 'Update Post', class: 'btn waves-effect waves-light' %>
<% end %>